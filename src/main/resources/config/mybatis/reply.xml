<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reply">

	<insert id="replyAdd">
		insert into reply
		values(#{m_id},#{re_content},sysdate,#{h_id},reply_seq.nextval)
	</insert>
	
	<select id="replySelect" resultType="net.hb.booking.ReplyDTO">
		select * from reply where h_name = #{h_id}
	</select>

</mapper>